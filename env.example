# FlowQuest Environment Configuration
# Copy this file to .env and update with your actual values

# === Application ===
APP_NAME=FlowQuest
APP_VERSION=0.1.0
DEBUG=false
NODE_ENV=development

# === Database ===
DATABASE_URL=postgresql://flowquest:flowquest_dev@localhost:5432/flowquest

# === Cache ===
REDIS_URL=redis://localhost:6379

# === Storage ===
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minio
S3_SECRET_KEY=minio123
S3_BUCKET=flowquest

# === Security ===
JWT_SECRET=change_me_in_production_very_long_random_string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# === CORS & Security ===
CORS_ALLOWLIST=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1,*.flowquest.dev

# === LLM Providers (choose one or both) ===
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-1106-preview

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# === TTS Providers (choose one) ===
# ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Coqui XTTS (self-hosted)
COQUI_URL=http://localhost:3000

# === Feature Flags ===
SAFE_MODE=true                # Use templated heuristics instead of external LLM
HQ_RENDER_ENABLED=false       # Enable high-quality rendering (requires more resources)

# === Performance Settings ===
MAX_CONCURRENT_RENDERS=4      # Maximum parallel rendering jobs
RATE_LIMIT_PER_MINUTE=60     # API rate limit per user per minute

# === Timeouts (seconds) ===
LLM_TIMEOUT=30               # LLM API request timeout
RENDER_TIMEOUT=180           # Video rendering timeout
EXPORT_TIMEOUT=60            # Export generation timeout

# === Frontend Settings ===
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# === Monitoring (Optional) ===
# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=flowquest
OTEL_ENVIRONMENT=development

# Sentry (Optional)
SENTRY_DSN=https://your-sentry-dsn-here
SENTRY_ENVIRONMENT=development

# === Development Tools ===
# Enable debugging
PYTHONPATH=.
LOG_LEVEL=INFO
SQL_ECHO=false

# Hot reload
WATCHFILES_FORCE_POLLING=false

# === Production Overrides ===
# Uncomment and set these in production
# DEBUG=false
# NODE_ENV=production
# JWT_SECRET=very-long-secure-random-string-for-production
# DATABASE_URL=postgresql://user:pass@prod-db:5432/flowquest
# CORS_ALLOWLIST=https://app.flowquest.com
# SAFE_MODE=false
# HQ_RENDER_ENABLED=true
